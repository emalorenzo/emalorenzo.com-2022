{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // this is the base url for the absolute imports
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
      "@/components/": ["components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    "studio/schemas/schema.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
